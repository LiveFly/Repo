<?xml version="1.0" encoding="utf-8"?>

 <log4net>
    <appender name="Console" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout" value="%d [%thread] %-5level %logger -%message %newline"/>
    </appender>
  
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <File value="logs/"/>
      <appendToFile value="true"/>
      <RollingStyle value="Date"/>
      <datePattern value="yyyyMMdd.LOG"/>
      <maximumFileSize value="1MB"/>
      <staticLogFileName value="false"/>
      <!--不加utf-8编码格式，中文字符将显示成乱码-->  
      <param name="Encoding" value="utf-8" />        
      <!--多线程时采用最小锁定-->  
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <preserveLogFileNameExtension value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <!--模版1-->
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
        <!--模版2-->
        <!--<conversionPattern value="%n＝＝＝＝＝＝＝＝＝＝
                                      %n【日志级别】%-5level
                                      %n【记录时间】%date
                                      %n【线程编号】[%thread]
                                      %n【执行时间】[%r]毫秒
                                      %n【出错文件】%F
                                      %n【出错行号】%L
                                      %n【出错的类】%logger 属性[%property{NDC}]
                                      %n【错误描述】%message
                                      %n【错误详情】%newline"/>-->
      </layout>
    </appender>
  
    <appender name="RollingLogFile" type="log4net.Appender.RollingFileAppender">
      <file value="logs/debug/"/>
      <AppendToFile value="true"/>
      <RollingStyle value="Composite"/>
      <StaticLogFileName value="false"/>
      <DatePattern value="yyyyMMdd.LOG"/>
      <!--日志保留10天-->
      <MaxSizeRollBackups value="10" />
      <!--文件1MB-->
      <MaximumFileSize value="1MB" />
      <!--不加utf-8编码格式，中文字符将显示成乱码-->  
      <param name="Encoding" value="utf-8" />        
      <!--多线程时采用最小锁定-->  
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d [%thread] %-5level %logger %property [%property{NDC}] - %mssage %newline"/>
      </layout>
    </appender>

   <logger name="ConsoleLog">
     <level value="ALL"/>
     <appender-ref ref="Console"/>
   </logger>
   <logger name="FileLog">
     <level value="ALL"/>
     <appender-ref ref="RollingFile"/>
   </logger>
   <logger name="RollingLog">
     <level value="ALL"/>
     <appender-ref ref="RollingLogFile"/>
   </logger>
</log4net>
